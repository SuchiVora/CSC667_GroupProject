<script>
	$(document).ready(function() {
		$('#content').load('pages/front'); //loads when user first visits homepage
	});

	$('a').not('#privacy').on("click", function(e) { //for links outside of content pane
		var page = $(this).attr('href');
		$('#content').load(page);
		e.preventDefault(); //prevents default page refresh.
	});

	$('#content').on("click", ".link", function(e) { //for links inside the content pane after ajax call
		var page = $(this).attr('href');
		$('#content').load(page);
		e.preventDefault();
		//prevents default page
	});
</script>